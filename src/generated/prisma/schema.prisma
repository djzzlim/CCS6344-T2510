generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Customer {
  CustomerID    Int       @id @default(autoincrement())
  FirstName     String
  LastName      String
  Email         String    @unique
  ContactNumber String?
  DateOfBirth   DateTime?
  AddressLine1  String?
  AddressLine2  String?
  City          String?
  State         String?
  ZipCode       String?
  PasswordHash  String
}
